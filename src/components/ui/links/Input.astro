---
// libraries
import { type HTMLAttributes } from 'astro/types';

// styles
import '../../../styles/components/link.css';

interface Props extends HTMLAttributes<'input'> {
  // id?: string;
  // inputName: string;
  // text?: string;
  dataType?: 'accent' | 'primary' | 'outline' | 'inactive' | 'invisible' | 'btn-icon';
  icon?: {
    name?: string;
    side: 'left' | 'right';
  };
  onClick?: string;
  classes?: string;
}

const { dataType, icon, classes, ...rest } = Astro.props as Props;
---

<input data-type={dataType} class:list={[classes]} {...rest} />
