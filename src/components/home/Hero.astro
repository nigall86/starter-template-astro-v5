---
// astro tools
import { Image } from 'astro:assets';

// components
import Link from '@components/ui/links/Link.astro';

// assets
import mainImage from '@assets/group-on-computer.webp';
---

<section class='hero | section'>
  <div class='content-grid'>
    <div class='even-columns'>
      <div class='flow'>
        <h1>Welcome to <span>brandboosters</span></h1>
        <p>
          Dedicated to boosting your brand's visibility and success that uses
          the latest strategies & techniques to help you reach your target
          audience and achieve your goals.
        </p>
        <div class='flex-group'>
          <Link href='#' text='Join now' classes='btn' />
          <Link dataType='outline' href='#' text='Learn more' classes='btn' />
        </div>
      </div>
      <div>
        <Image
          src={mainImage}
          alt='Group of young people looking at laptop'
          format='avif'
        />
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    .even-columns {
      --gutter: var(--size-9);
    }
  }
</style>
